<snippet name="轻提示js" description="">
<insertText location="beforeSelection">
<![CDATA[//弹出轻提示
	$(".btn2").on("click",function(){		
		 var  $toast = $("#toast")
		 if ($toast.css('display') != 'none') return;		
		 $toast.fadeIn(100)
		 setTimeout(function(){
		   $toast.fadeOut(100)
		 },2000)
	})]]>
</insertText>
<insertText location="afterSelection"><![CDATA[]]>
</insertText>
